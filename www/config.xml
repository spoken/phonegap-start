<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "com.sample.deviceready"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>PhoneGap 3.3 Device Ready Example</name>

    <description>
        An App That tests the basic features of build on your device. 
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Ismael Jimoh 
    </author>
	
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	
	<preference name="phonegap-version" value="3.3.0" />
	<preference name="fullscreen" value="false" />
	<preference name="LoadUrlTimeoutValue" value="10000"/>
	<preference name="LoadingDialog" value="Please wait, the app is loading"/>
	<preference name="AllowInlineMediaPlayback" value="true"/>
	<preference name="SplashScreenDelay" value="7000"/>
	
	<preference name="KeepRunning" value="true"/>
	
	<icon src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
	
	<gap:splash src="splash.png"/>
	
	<gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:qualifier="port-ldpi" />
	<gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:qualifier="port-mdpi" />
	<gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:qualifier="port-hdpi" />
	<gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:qualifier="port-xhdpi" />
	<gap:splash src="splash/android/xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
	
	<gap:splash src="splash/android/ldpi_landscape.png" gap:platform="android" gap:qualifier="land-ldpi" />
	<gap:splash src="splash/android/mdpi_landscape.png" gap:platform="android" gap:qualifier="land-mdpi" />
	<gap:splash src="splash/android/hdpi_landscape.png" gap:platform="android" gap:qualifier="land-hdpi" />
	<gap:splash src="splash/android/xhdpi_landscape.png" gap:platform="android" gap:qualifier="land-xhdpi" />
	
	<!--Plugins-->
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.media-capture" />
	<gap:plugin name="org.apache.cordova.device" version="0.2.3" />
	<gap:plugin name="org.apache.cordova.device-orientation" />
	<gap:plugin name="org.apache.cordova.console" />
	<gap:plugin name="org.apache.cordova.contacts" version="0.2.9"/>
	<gap:plugin name="org.apache.cordova.device-motion" />
	<gap:plugin name="org.apache.cordova.file" />
	<gap:plugin name="org.apache.cordova.file-transfer" />
	<gap:plugin name="org.apache.cordova.network-information" />
	<gap:plugin name="org.apache.cordova.media" />
	<gap:plugin name="org.apache.cordova.inappbrowser"  />
	<gap:plugin name="org.apache.cordova.globalization" />
	<gap:plugin name="org.apache.cordova.dialogs" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="org.apache.cordova.vibration" />
	
	<gap:plugin name="com.phonegap.plugins.barcodescanner" version="1.1.0" />
	
	<gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.4.0">
		<param name="APP_ID" value="596163223824560" />
		<param name="APP_NAME" value="PhoneGap 3.3 Example - Test1" />
	</gap:plugin>
	
	<gap:plugin name="com.simonmacdonald.telephonenumber" version="1.0.0" />
	
	<gap:config-file platform="android" parent="/manifest">
		<supports-screens 
			android:xlargeScreens="false" 
			android:largeScreens="false" 
			android:smallScreens="false" />
	</gap:config-file>
	
	<gap:config-file platform="android" parent="/manifest/application">
		 <activity android:screenOrientation="portrait" android:configChanges="orientation"/>
		 <activity android:name=".ui.MyActivity" >
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="image/*" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEND_MULTIPLE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="image/*" />
			</intent-filter>
			<intent-filter>
						<action android:name="android.intent.action.MAIN" />
						<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
						<action android:name="android.intent.action.VIEW"></action>
						<category android:name="android.intent.category.DEFAULT"></category>
						<category android:name="android.intent.category.BROWSABLE"></category>
						<data android:host="www.youtube.com" android:scheme="http"></data>
			</intent-filter>
		</activity>
	</gap:config-file>
	
	<access origin="*" />

</widget>